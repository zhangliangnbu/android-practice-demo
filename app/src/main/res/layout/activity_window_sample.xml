<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".window.WindowSampleActivity">

    <Button
        android:id="@+id/btn_app_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="显示或隐藏应用Window"/>

    <Button
        android:id="@+id/btn_inner_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="显示或隐藏内部Window"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_app_window"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_system_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="显示或隐藏系统Window"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_inner_window"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_system_window2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="显示或隐藏系统Window2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_system_window"
        android:layout_marginTop="10dp"/>

</android.support.constraint.ConstraintLayout>