<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tags.TagsActivity">

    <com.light.android.taggroup.TagGroup
        android:id="@+id/tag_group"
        style="@style/TagGroup"
        android:layout_marginTop="10dp"/>

    <com.light.android.taggroup.TagGroup
        android:id="@+id/tag_group_checkable"
        style="@style/TagGroup"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tag_group"/>

    <com.light.android.taggroup.TagGroup
        android:id="@+id/tag_group_delete"
        style="@style/TagGroup"
        android:layout_marginTop="40dp"
        app:atg_isAppendMode="true"
        app:layout_constraintTop_toBottomOf="@id/tag_group_checkable"
        />

</androidx.constraintlayout.widget.ConstraintLayout>